/* pages/homepage/index.wxss */
.main{
    width:100%;
    height:100%;
}
.title{
    width: 100%;
    padding:20rpx 30rpx;
    box-sizing: border-box;
}
.title input{
    width: 100%;
    height:70rpx;
    background: #F5F5F5;
    border-radius:40rpx;
    padding-left:30rpx;
    box-sizing: border-box;
}
.swiper-tap{
    width:800rpx;
    background:#ccc;
    white-space: nowrap;
    background: #fefefe;
    height:70rpx;
}
.swiper-tap text{
    display: inline-block;
    width:180rpx;
    text-align: center;
}
.center{
    width:100%;
    display: flex;
    flex-wrap: wrap;
}
.center view{
    width: 50%;
    padding:0 20rpx;
    box-sizing: border-box;
}
.top image{
    width:300rpx;
    height:340rpx;
}
.bottom{
    width:100%;
    display: inline;
}
.bottom text{
    display: inline;
    font-size:30rpx;
}